# Color output
set terminal {terminal}

# Output file
set output "{out_file}"

# Title
set title "{title}"

# Appearance
set border 3
set grid
set style fill solid 0.0 border  -1
set boxwidth 50.0 absolute

# Axes
set xrange [0:{max_x}]
set xlabel "{x_title}"
set xtics nomirror rotate by 45 offset -1.7,-1.2
set ytics nomirror
set yrange [0:{max_y}]
set ylabel "{y_title}"

# Plot Data
# columns: x, box_min, whisker_min, whisker_max, box_max, box width, label
plot '{file_stats}' using 1:3:2:9:8:(0):xticlabels(1) with candlesticks notitle whiskerbars, \
     ''            using 1:4:4:4:4:(0) with candlesticks lt -1 notitle, \
     ''            using 1:4:4 with lines notitle, \
     ''            using 1:4:4 with labels font "Times,7" point pt 0 offset char -1.8,-0.2 notitle, \
     '{file_raw_data}' using ($1+{point_offset}):($2) with point pt 7 ps 0.2 lt -1 notitle

